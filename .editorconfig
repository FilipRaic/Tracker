# EditorConfig helps maintain consistent coding styles for multiple developers
# working on the same project across various editors and IDEs.
# See https://editorconfig.org for more information.

# Top-most EditorConfig file
root = true

# All files
[*]
charset = utf-8
end_of_line = crlf
indent_style = space
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true
max_line_length = 120

# Java files
[*.java]
indent_style = space
indent_size = 4
continuation_indent_size = 8

# SQL files
[*.sql]
indent_style = space
indent_size = 4
# SQL specific settings
# Keywords in uppercase
keyword_case = upper
# Identifiers in lowercase
identifier_case = lower
# Align column definitions
align_column_definitions = true
# Align assignments in column definitions
align_assignments = true
# Align constraints
align_constraints = true
# Parentheses on new line for table definitions
table_definition_style = new_line

# YAML files
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# XML files
[*.xml]
indent_style = space
indent_size = 2

# Markdown files
[*.md]
trim_trailing_whitespace = false

# Gradle files
[*.{gradle,groovy}]
indent_style = space
indent_size = 4

# JSON files
[*.json]
indent_style = space
indent_size = 2

# Properties files
[*.properties]
indent_style = space
indent_size = 2

# Shell scripts
[*.{sh,bash}]
indent_style = space
indent_size = 2
end_of_line = lf

# Batch files
[*.{cmd,bat}]
end_of_line = crlf

# Docker files
[{Dockerfile,docker-compose.yml}]
indent_style = space
indent_size = 2
